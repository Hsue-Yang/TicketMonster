@{
    ViewData["Title"] = "Dashboard";
}

@section topCSS{
    <link href="~/css/vue.css" rel="stylesheet" asp-append-version="true" />
}

@section endJS{
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}

<section class="container" id="app">
    <h1 class="fw-semibold mt-4">Dashboard</h1>
    <!-- breadcrumb -->
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active badge">Dashboard</li>
        </ol>
    </nav>
    <div class="row">
        <!-- Monthly -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">monthly Earnings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 mh-1">
                                <transition name="fade">
                                    <div class="spinner-border spinner-border-sm ms-2 mt-1 position-absolute" role="status" v-if="loading"></div>
                                    <span v-else v-cloak>{{ monthlyEarnings }}</span>
                                </transition>
                            </div>
                        </div><div class="col-auto"><i class="fas fa-dollar-sign fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Annual -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Annual Earnings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 mh-1">
                                <transition name="fade">
                                    <div class="spinner-border spinner-border-sm ms-2 mt-1 position-absolute" role="status" v-if="loading"></div>
                                    <span v-else v-cloak>{{ annualEarnings }}</span>
                                </transition>
                            </div>
                        </div><div class="col-auto"><i class="fa-solid fa-sack-dollar fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Totol Users -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Totol Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 mh-1">
                                <transition name="fade">
                                    <div class="spinner-border spinner-border-sm ms-2 mt-1 position-absolute" role="status" v-if="loading"></div>
                                    <span v-else v-cloak>{{ totolUsers }}</span>
                                </transition>
                            </div>
                        </div><div class="col-auto"><i class="fas fa-user fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Events -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Events</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 mh-1">
                                <transition name="fade">
                                    <div class="spinner-border spinner-border-sm ms-2 mt-1 position-absolute" role="status" v-if="loading"></div>
                                    <span v-else v-cloak>{{ totalEvents }}</span>
                                </transition>
                            </div>
                        </div><div class="col-auto"><i class="fa-solid fa-ticket fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- chart -->
    <transition name="slide">
        <section class="row" v-show="!loading">
            <div class="col-xl-6 p-2 my-4">
                <canvas id="drawMonthlyEarnings" class="w-100"></canvas>
            </div>
            <div class="col-xl-6 p-2 my-4">
                <canvas id="drawAnnualEarnings" class="w-100"></canvas>
            </div>
            <div class="col-xl-6 p-2 my-4">
                <canvas id="drawUserGrowth" class="w-100"></canvas>
            </div>
            <div class="col-xl-6 p-2 my-4">
                <canvas id="drawOrderDesire" class="w-100"></canvas>
            </div>
        </section>
    </transition>
</section>