@using TicketMonster.Web.ViewModels.Home;
@model SearchBoxDropDownViewModel

<form action="~/Search" method="get">
    <div class="row col-lg-8 col-md-9 col-sm-10 mx-auto d-flex justify-content- pt-2">
        <h1 class="fs-1 text-center mt-3 title">Let's Make Live Happen</h1>
        <h2 class="fs-5 text-center mb-3 title">
            Shop millions of live events and discover can't-miss concerts,
            games, theater and more.
        </h2>
        <div class="d-flex col-11 mx-auto justify-content-center">
            <div class="col-lg-3 col-md-3 col-sm-2 mx-1">
                <select id="caId" name="caId" class="form-select" aria-label="Default select example">  
                    <option value="0">Select Your Genre</option>
                    @foreach (var item in Model.Category)
                    {
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 mx-1">
                <input id="dates" type="text" class="form-control" name="dates" value="01/01/2018 - 01/15/2018" />
            </div>
        </div>
    </div>
    <div class="d-flex col-lg-6 col-md-9 col-sm-10 mx-1 pt-2 mx-auto justify-content-center">
        <form class="d-flex pt-2 input-group">
            <input id="keyWord" name="keyword" class="form-control me-2" type="search" placeholder="Search Events" aria-label="Search">
        </form>
            <button type="submit" class="btn btn-outline-success">Search</button>
    </div>
</form>
