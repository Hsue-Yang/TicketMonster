            Connected Accounts
        </button> *@
    </section>
    <!-- content -->
    <article class="tab-content" id="app">
        <section class="tab-pane active show" id="profile">
            <div class="row">
                <div class="col-md-9 col-lg-8">
                    <form asp-action="AccountSettings" method="post" id="app">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- Details -->
                        <section class="d-flex flex-column align-items-md-start gap-3 col-md-8">
                            <h3 class="fs-5 fw-semibold">My Info</h3>
                            <div class="form-group col-12">
                                <label asp-for="FirstName" class="control-label small py-1 ps-1"></label>
                                <input asp-for="FirstName" class="form-control rounded-1" required />
                                <span asp-validation-for="FirstName" class="text-danger badge"></span>
                            </div>
                            <div class="form-group col-12">
                                <label asp-for="LastName" class="control-label small py-1 ps-1"></label>
                                <input asp-for="LastName" class="form-control rounded-1" required />
                                <span asp-validation-for="LastName" class="text-danger badge"></span>
                            </div>
                            <div class="form-group col-12 opacity-50">
                                <label asp-for="Birthday" class="control-label small py-1 ps-1"></label>
                                <input asp-for="Birthday" class="form-control rounded-1 border shadow-none" type="text" asp-format="{0:yyyy-MM-dd}" readonly />
                            </div>
                            <input type="submit" value="Update Details" class="btn btn-primary rounded-0 fs-7 my-3 mb-4" />
                        </section>
                        <hr class="my-4 mb-5" />
                        <!-- Email -->
                        <section class="d-flex flex-column align-items-md-start gap-3 col-md-8">
                            <h3 class="fs-5 fw-semibold">Email Address</h3>
                            <div class="form-group col-12 form-floating flex-grow-1 opacity-50">
                                <input asp-for="Email" class="form-control rounded-1 border shadow-none" placeholder="Email" id="Email" type="email" readonly />
                                <label asp-for="Email" class="control-label text-body-tertiary small pt-2 h-25" for="Email">Email</label>
                            </div>
                            <input type="submit" value="Update Email" class="btn btn-primary rounded-0 fs-7 my-3 mb-4" />
                        </section>
                        <hr class="my-4 mb-5" />
                        <!-- Phone -->
                        <section class="d-flex flex-column align-items-md-start gap-3 col-md-8">
                            <h3 class="fs-5 fw-semibold">Phone Number</h3>
                            <div class="form-group col-12 form-floating flex-grow-1">
                                <input asp-for="Phone" class="form-control rounded-1 bg-transparent" placeholder="Phone Number" id="Phone" type="tel" required />
                                <label asp-for="Phone" class="control-label text-body-tertiary small pt-2 h-25" for="Phone">Phone Number</label>
                                <span asp-validation-for="Phone" class="text-danger badge"></span>
                            </div>
                            <input type="submit" value="Update Number" class="btn btn-primary rounded-0 fs-7 my-3 mb-4" />
                        </section>
                        <hr class="my-4 mb-5" />
                        <!-- Location -->
                        <section class="d-flex flex-column align-items-md-start gap-3 col-md-8">
                            <h3 class="fs-5 fw-semibold">Location</h3>
                            <div class="form-group col-12">
                                <label asp-for="Country" class="control-label small ps-1"></label>
                                <select asp-for="Country" class="form-control form-select rounded-1">
                                    <option selected>Taiwan</option>
                                </select>
                                <span asp-validation-for="Country" class="text-danger badge"></span>
                            </div>
                            <div class="form-group col-12 form-floating flex-grow-1">
                                <input asp-for="Address" class="form-control rounded-1 bg-transparent" placeholder="Address" id="Address" required />
                                <label asp-for="Address" class="control-label text-body-tertiary small pt-2 h-25" for="Phone">Address</label>
                                <span asp-validation-for="Address" class="text-danger badge"></span>
                            </div>
                            <input type="submit" value="Update Location" class="btn btn-primary rounded-0 fs-7 my-3 mb-4" />
                        </section>
                        <!-- hidden -->
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Password" />
                        <input type="hidden" asp-for="CreateTime" />
                        <input type="hidden" asp-for="ModifyTime" />
                        <input type="hidden" asp-for="IsVerified" />
                        <input type="hidden" asp-for="Orders" />
                    </form>
                </div>
            </div>
        </section>
