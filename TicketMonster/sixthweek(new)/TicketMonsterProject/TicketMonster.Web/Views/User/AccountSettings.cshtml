@model Customer

@{
    ViewData["Title"] = "AccountSettings";
    ViewBag.Navbar = true;
}

@section topCSS{
    <link href="~/css/user/accountsettings.css" rel="stylesheet" asp-append-version="true" />
}

@section endJS{
    @Html.Raw(ViewBag.ToastrMessage)
    <script src="~/js/user/account.js" asp-append-version="true"></script>
}

<article class="container my-5">
    <h2 class="fs-1 fw-semibold mb-4">Account Settings</h2>
    <!-- control -->
    <section class="nav border-bottom gap-4 my-4 col-md-9 col-lg-8">
        <button class="btn text-dark rounded-0 border-top-0 border-start-0 border-end-0 border-3 fs-5 px-0 active"
                data-bs-toggle="pill" data-bs-target="#profile">
            Profile
        </button>
